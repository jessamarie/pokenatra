  <form id="delete_trainer" action="/trainers/<%= @trainer.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
  </form>

<img src="<%= @trainer.img_url %>" alt="picture of trainer">


  <p><label>Level:</label><%= @trainer.level %></p>
