  <p><label>Pokemon:</label></p>
  <ul>
    <% @trainer.pokemons.each do |poke| %>
      <li>
        <a href="/pokemon/<%= poke.id %>">
          <%= poke.name %>
        </a>
      </li>
    <% end %>
  </ul>


